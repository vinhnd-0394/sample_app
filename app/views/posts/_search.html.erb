<%= search_form_for @q, url: root_path, class: "flex gap-2 my-4" do |f| %>
  <div class="flex flex-col">
    <%= f.label :content_cont, t("post.search.content") %>
    <%= f.search_field :content_cont, value: fill_params_value(:content_cont), class: "border" %>
  </div>
  <div class="flex flex-col">
    <%= f.label :user_name_cont, t("post.search.author") %>
    <%= f.search_field :user_name_cont, value: fill_params_value(:user_name_cont), class: "border" %>
  </div>
  <div class="flex flex-col">
    <%= f.hidden_field :page, value: params[:page] %>
  </div>
  <div class="flex flex-col">
    <%= f.label :s, t("post.search.like_count.title") %>
    <%= f.select :s,
      [["", Settings.order.desc],
       [t("post.search.like_count.asc"), Settings.order.asc],
       [t("post.search.like_count.desc"), Settings.order.desc]
      ],
      class: "border",
      selected: fill_params_value(:s)
    %>
  </div>
    <div class="flex flex-col justify-end">
    <%= f.submit t("post.search.title"), class: "bg-blue-500 text-white font-bold h-[42px] px-4" %>
  </div>
<% end %>
