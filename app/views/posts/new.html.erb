<section class="my-10">
  <div class="flex flex-col items-center justify-center px-6 py-8 mx-auto lg:py-0">
    <div class="w-full bg-white rounded-lg shadow dark:border dark:bg-gray-800 dark:border-gray-700">
      <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
        <h1 class="text-xl font-bold leading-tight tracking-tight text-center text-gray-900 md:text-2xl dark:text-white">
          <%= t("post.create.title") %>
        </h1>
        <%= form_with(model: @post) do |f| %>
          <%= render "shared/error_messages", instance: @post %>
          <div class="mb-2">
            <%= f.label :content, t("post.create.content"), class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
            <%= f.text_area :content,
              rows: 4,
              class: "resize-none bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-4 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 max-h-[300px] overflow-hidden",
              data: { controller: "post", target: "post.textarea" }
            %>
          </div>
          <div class="mb-2">
            <%= f.label :status, t("post.create.status"), class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
            <%= f.select :status, Post.statuses.keys.map { |status| [t("post.statuses.#{status}"), status] },
              class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
            %>
          </div>
          <%= f.submit t("post.create.action"), class: "cursor-pointer w-full text-white bg-primary-600 hover:bg-primary-700 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800 mt-2" %>
        <% end %>
      </div>
    </div>
  </div>
</section>
