<% if instance.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      <%= t("form_error.template", count: instance.errors.count) %>
    </div>
    <ul>
    <% instance.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
